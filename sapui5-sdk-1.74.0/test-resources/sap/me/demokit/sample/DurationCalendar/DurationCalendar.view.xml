<mvc:View
        controllerName="sap.me.sample.DurationCalendar.DurationCalendar"
        xmlns:l="sap.ui.layout"
        xmlns:me="sap.me"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m">
    <l:VerticalLayout class="sapUiSmallMargin">
        <l:HorizontalLayout>
            <RadioButton text="One Week" select="changeToOneWeek" groupName="rangeGroup"/>
            <RadioButton text="Two Weeks" select="changeToTwoWeeks" groupName="rangeGroup"/>
            <RadioButton text="One Month" select="changeToOneMonth" groupName="rangeGroup" selected="true"/>
            <RadioButton text="Two Months" select="changeToTwoMonths" groupName="rangeGroup"/>
        </l:HorizontalLayout>
        <me:Calendar id="durationCalendar" width="640px" />
    </l:VerticalLayout>
</mvc:View>
